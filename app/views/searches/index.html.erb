<div class="page-header">
  <%= link_to new_search_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Search
  <% end %>
  <h1>Listing searches</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Keywords</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Cargo</th>
            <th>Idade</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @searches) do |search| %>
            <td><%= search.keywords %></td>
            <td><%= search.email %></td>
            <td><%= search.estado %></td>
            <td><%= search.cargo %></td>
            <td><%= search.idade %></td>
            <td><%= link_to 'Show', search %></td>
        <td><%= link_to 'Edit', edit_search_path(search) %></td>
        <td><%= link_to 'Search', search %></td>
        <td><%= link_to 'Destroy', search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
