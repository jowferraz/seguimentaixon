<div class="page-header">
  <%= link_to contacts_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_contact_path(@contact), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show contact</h1>
</div>

<dl class="dl-horizontal">
  <dt>Nome:</dt>
  <dd><%= @contact.nome %></dd>

  <dt>Email:</dt>
  <dd><%= @contact.email %></dd>

  <dt>Estado:</dt>
  <dd><%= @contact.estado %></dd>

  <dt>Idade:</dt>
  <dd><%= @contact.idade %></dd>

  <dt>Cargo:</dt>
  <dd><%= @contact.cargo %></dd>

  <dt>User:</dt>
  <dd><%= @contact.user %></dd>

</dl>
