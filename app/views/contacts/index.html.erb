<div class="page-header">
  <%= link_to new_contact_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Contact
  <% end %>
  <h1>Listing contacts</h1>
   <h2>
  <%= form_tag contacts_path, :method => "get" do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Contacts" %>
  <%= submit_tag "Search"%>
  <% end %> 
  </h2>
  <h3>
    <%= link_to "Custom Search", new_search_path %>
  </h3>
  <h4>
    <%= link_to "Saved Searches", "searches" %>
  </h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Idade</th>
            <th>Cargo</th>
     </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @contacts) do |contact| %>
            <td><%= contact.nome %></td>
            <td><%= contact.email %></td>
            <td><%= contact.estado %></td>
            <td><%= contact.idade %></td>
            <td><%= contact.cargo %></td>
            <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
